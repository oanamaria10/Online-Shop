﻿@{
    ViewBag.Title = "Aproba Produse";
}

<br />

@if (TempData["message"] != null)
{
    <div class="alert p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<br />

<div class="row">
    @foreach (proiect.Models.Product product in ViewBag.Products)
    {
        if (!product.Approved)
        {
            <div class="col-4 mb-4">
                <div class="card" style="height:100%; width: 100%;">

                    <div class="card-body d-flex justify-content-between flex-column">
                        <div>

                            <h3 class="card-title alert-success py-3 px-3 rounded-2">
                                @product.Title
                            </h3>

                            <div class="card-text">Pret: @product.Price</div>
                            <div class="card-text">
                                <img class="img-fluid mb-2" width="300" height="400" src="@product.Image">
                            </div>

                        </div>

                        <div class="d-flex flex-row justify-content-between p-3">

                            <form method="post" action="/Products/Approve/@product.ProductId">

                                <button class="btn btn-success" type="submit">Aproba produs</button>

                            </form>

                            <form method="post" action="/Products/Delete/@product.ProductId">

                                <button class="btn btn-danger" type="submit">Respinge produs</button>

                            </form>

                        </div>
                    </div>

                </div>
            </div>
        }
    }
</div>
