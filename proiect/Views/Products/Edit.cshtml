@model proiect.Models.Product

<h2 class="text-center mt-5">Editeaza produsul</h2>

<br />

@if (TempData["message"] != null)
{
    <div class="alert p-3 rounded-3 text-center mb-5 alert-danger">
        @TempData["message"]
    </div>
}

<br />
<div class="container mt-5">

    <div class="row">

        <div class="col-md-6 offset-3">
            <div class="card-body">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Products", method: FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
               
                @Html.Label("Title", "Titlu Produs")
                <br />
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
                <br /> <br />

                @Html.Label("Description", "Descriere Produs")
                <br />
                @Html.TextArea("Description", null, new { @class = "summernote" })
                @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                <br /> <br />

                @Html.Label("Price", "Pret Produs")
                @Html.Editor("Price", null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
                <br /> <br />

                @Html.Label("Image", "Incarcati imaginea")
                @Html.Editor("Image", null, new { htmlAttributes = new { @class = "form-control" , @type = "file"} })
                <br /> <br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId,new SelectList(Model.Categ, "Value", "Text"),
                                      "Selectati categoria", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br /><br />

                <button class="btn btn-sm btn-success" type="submit">Modifica produs</button>

            } 
            </div>
        </div>

    </div>

</div>




