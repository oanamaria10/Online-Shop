<div class="card-body">

    <h3 class="card-title alert-success py-3 px-3 rounded-2" style="color:white">
        @Model.Title
    </h3>

    <div class="card-text">@Html.Raw(Model.Description)</div>
    <br />
    <div class="card-text">Pret: @Model.Price</div>
    <div class="card-text">
        <img class="img-fluid mb-2" width="300" height="400" src="@Model.Image">
    </div>
    <div class="card-text">
        Final Rating: @Model.FinalRating
    </div>
    <div class="card-text">
        @for (int i = 1; i <= 5; i++)
        {
            if (i <= @Model.FinalRating)
            {
                <i class="my-star star-1 is-active"></i>
            }
            else
            {
                <i class="my-star"></i>
            }
        }
    </div>
    <div class="d-flex justify-content-between flex-row mt-5">

        <div>
            <i class="bi bi-globe"></i>
            @Model.Category.CategoryName
        </div>

        <div>
            <i class="bi bi-person"></i>
            @Model.User.UserName
        </div>

        <span >@Model.Date</span>
    </div>
    <br />
    @if (User.IsInRole("User") || !User.Identity.IsAuthenticated)
    {
        <div class="col-md-6">
            <form class="float-right" method="post" action="/Basket/New/@Model.ProductId">
                <button type="submit" class="btn btn-success btn-sm"><i class="bi bi-bag"></i> Adauga in cos</button>
            </form>
        </div>
    }
</div>
